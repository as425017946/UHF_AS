<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/img_common_bg"
    tools:context=".mine.UpImgActivity">
    <include android:layout_width="match_parent"
        android:layout_height="68dp"
        layout="@layout/common_top"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:background="@mipmap/upload_img_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="ID:12345646546"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="6dp"
            android:textSize="14sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/upload_btn_pho"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="69dp"
        android:layout_height="38dp"
        android:layout_marginTop="98dp"
        android:background="@mipmap/upload_btn_complete_highlight"
        android:textColor="@color/text_white"
        android:text="上传"
        android:textSize="16sp"/>
    
</LinearLayout>