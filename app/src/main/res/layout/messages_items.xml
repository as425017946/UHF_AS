<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="223dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@mipmap/notice_mask_normal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="任务类型："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="消息中心"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="计划开始时间："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_startime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text=""
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="计划结束时间："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_endtime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text=""
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="备注："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_beizhu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text=""
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="执行组："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_zhixingzu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text=""
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green"
            android:text="执行对象："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/messages_zhixingduixing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text=""
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>